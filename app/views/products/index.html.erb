<h1>Products#index</h1>

<%=link_to 'show Product', new_product_path %>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.product_name %></td>
        <td><%= link_to 'Edit', edit_product_path(id: product.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>
