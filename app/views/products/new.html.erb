<h1>Products#new</h1>
<%= form_with model: @product do |f| %>
  <% if @product.errors.any? %>
    <div>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :product_name %><br>
    <%= f.text_field :product_name %>
  </div>
  <div>
    <%= f.label :description %><br>
    <%= f.text_area :desc %>
  </div>
  <div>
    <%= f.label :sku %><br>
    <%= f.text_field :sku %>
  </div>
  <div>
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>